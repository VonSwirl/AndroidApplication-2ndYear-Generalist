<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.tees.com2060.kitkat.generalist.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/homeBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeBar"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/pad_size_16dp"
        android:text="@string/work_rest_and_play" />

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/addButton"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_margin="@dimen/pad_size_16dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context=".CalendarActivity"
        android:compactCalendarBackgroundColor="#ffe95451"
        android:compactCalendarTextColor="#fff"
        android:compactCalendarCurrentSelectedDayBackgroundColor="#E57373"
        android:compactCalendarCurrentDayBackgroundColor="#B71C1C"
        android:compactCalendarMultiEventIndicatorColor="#fff"/>


    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/pad_size_16dp"
        android:text="@string/add_lists" />

    <Button
        android:id="@+id/view_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/pad_size_16dp"
        android:text="@string/view_lists" />

</RelativeLayout>
